version: '3'
services:
  db:
    image: mysql:8.0
    container_name: db
    restart: unless-stopped
    environment:
      - MYSQL_HOST=35.202.174.30
      - MYSQL_DATABASE=telematica-db
      - MYSQL_PASSWORD=telematica2021*
      - MYSQL_ROOT_PASSWORD=telematica2021*
    volumes:
      - dbdata:/var/lib/mysql
    command: '--default-authentication-plugin=mysql_native_password'
    networks:
      - app-network
  wordpress:
    depends_on:
      - db
    links:
      - db
    image: wordpress:fpm-alpine
    container_name: wordpress
    restart: unless-stopped
    env_file: .env
    environment:
      - WORDPRESS_DB_HOST=db:3306
      - WORDPRESS_DB_USER=root
      - WORDPRESS_DB_PASSWORD=telematica2021*
      - WORDPRESS_DB_NAME=telematica-db
    volumes:
      - wordpress:/var/www/html
    networks:
      - app-network
  webserver:
    depends_on:
      - wordpress
    image: nginx
    container_name: webserver
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - wordpress:/var/www/html
      - certbot-etc:/etc/letsencrypt
      - ./nginx/logs:/var/log/nginx
    networks:
      - app-network
  certbot:
    depends_on:
      - webserver
    image: certbot/certbot
    container_name: certbot
    volumes:
      - certbot-etc:/etc/letsencrypt
      - wordpress:/var/www/html
    command: certonly --webroot --webroot-path=/var/www/html --email alejoferna2301@gmail.com --agree-tos --no-eff-email -d topicostelematica.ml -d www.topicostelematica.ml
#    command: delete --cert-name $MAIN_DOMAIN
volumes:
  certbot-etc:
  wordpress:
  dbdata:
networks:
  app-network:
    driver: bridge